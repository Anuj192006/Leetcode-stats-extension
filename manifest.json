{
    "manifest_version": 3,
    "name": "LeetMetric",
    "version": "1.0",
    "description": "Search LeetCode stats with a username",
    "permissions": [
      "activeTab"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      },
      "default_popup_width": 600,
      "default_popup_height": 400
    },
    "host_permissions": [
      "https://leetcode-stats-api.herokuapp.com/*"
    ]
  }
  